

#include "alt_types.h"
#include <stdio.h>
#include <unistd.h>
#include "system.h"
#include "sys/alt_irq.h"
#include "altera_avalon_pio_regs.h"

void wait(void) {
    volatile int i = 10000;
    while (i--);
}

int main(void) {
    volatile alt_u8 led = 0x00;
    while (1) {
        /* Turn the LEDs on. */
        led++;
        IOWR_ALTERA_AVALON_PIO_DATA(LED_PIO_BASE, led);
        wait();
    }
    return 0;
}
